# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_password
DB_DATABASE=fingerprint_attendance

# Application Configuration
APP_PORT=3000
NODE_ENV=development

# Security Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION=24h
JWT_REFRESH_SECRET=your_refresh_token_secret
JWT_REFRESH_EXPIRATION=7d

# Encryption
BCRYPT_SALT_ROUNDS=10
FRONTEND_URL=http://localhost:5173


# Sync Settings
SYNC_INTERVAL_MINUTES=15
SYNC_BATCH_SIZE=100
SYNC_CONFLICT_MODE=server_override
SYNC_MAX_RETRY_ATTEMPTS=3
SYNC_RETRY_DELAY_MS=1000
SYNC_ENABLE_AUTO_SYNC=true
SYNC_CLEANUP_DAYS=90

# Device Communication Settings
DEVICE_DEFAULT_PORT=80
DEVICE_CONNECTION_TIMEOUT=5000
DEVICE_OPERATION_TIMEOUT=30000
DEVICE_RETRY_ATTEMPTS=3
DEVICE_RETRY_DELAY=1000
DEVICE_ENABLE_BACKOFF=true
