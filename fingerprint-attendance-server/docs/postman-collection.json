{
    "info": {
        "name": "Fingerprint Attendance System API",
        "description": "Koleksi API untuk sistem manajemen mesin fingerprint dan absensi.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Login",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"username\": \"admin\",\n    \"password\": \"password123\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/api/auth/login",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "login"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Employees",
            "item": [
                {
                    "name": "Get All Employees",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/employees",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "employees"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Attendance",
            "item": [
                {
                    "name": "Get Logs",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/attendance/logs?startDate=2023-10-01",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "attendance",
                                "logs"
                            ],
                            "query": [
                                {
                                    "key": "startDate",
                                    "value": "2023-10-01"
                                }
                            ]
                        }
                    }
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:3001"
        },
        {
            "key": "token",
            "value": "your_jwt_token_here"
        }
    ]
}